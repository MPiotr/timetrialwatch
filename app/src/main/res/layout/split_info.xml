<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/numberView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:text="178"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/material_dynamic_primary0"
        android:textSize="24sp"
        android:textStyle="bold" />

            <TextView
                android:id="@+id/splitView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coming to split no 1"
                android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leader_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Turtle"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/leaders_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-00:04:00.0"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/competitor_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Ahiles"
                android:textColor="@color/material_dynamic_primary0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/competitor_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+00:04:00.0"
                android:textColor="@color/material_dynamic_primary0"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/chaser_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="The arrow"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/chaser_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+00:00:00.9"
                android:textSize="10sp" />
        </LinearLayout>

</LinearLayout>
